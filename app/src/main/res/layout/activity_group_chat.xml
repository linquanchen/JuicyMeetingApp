<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cmu.android.juicymeeting.CreateEvent"
    android:background="@color/white_smoke">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color_green">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/group_chat_back_btn"
            android:src="@drawable/back_arrow"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/group_chat"
            android:id="@+id/create_event"
            android:layout_gravity="center"
            android:layout_weight="15"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/chat_group_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@color/white"
            android:dividerHeight="@dimen/pad_5dp"
            android:fastScrollEnabled="true"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/pad_10dp"
            android:paddingTop="@dimen/pad_10dp"
            tools:listitem="@layout/chat_item_rcv" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_light"
            android:gravity="center_vertical"
            android:padding="@dimen/pad_5dp"
            tools:context=".MainActivity">  <!-- don't know what this does -->

            <EditText
                android:id="@+id/edit_chat_msg"
                style="@style/edittext_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/send_msg_btn"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_send" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>