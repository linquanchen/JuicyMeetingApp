<?xml version="1.0" encoding="utf-8"?>
<!--
group color bar: group_color_bar
group name: group_name
group description: group_description
-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/event_list_card_height"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:id="@+id/group_color_bar"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@color/sexy_pink"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="20sp"
                android:text="Juicy Group"/>

            <TextView
                android:id="@+id/group_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:textSize="10sp"
                android:text="Juicy Meeting"/>

            <edu.cmu.juicymeeting.model.RoundedImageView
                android:id = "@+id/group_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"

                android:src="@drawable/koji"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
